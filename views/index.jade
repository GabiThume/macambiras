      div.panel.panel-default
        div.panel-body
          h3 Lines
          img(src='/media/demos/if_else_lines.png')
    div.col-sm-4
      div.panel.panel-default
        div.panel-body
          h3 Ellipses
          img(src='/media/demos/ittle_ellipses.png')
