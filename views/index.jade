      div.panel.panel-default
        div.panel-body
          h3 No fill
          img(src='/media/demos/noFill.png')
    div.col-sm-4
      div.panel.panel-default
        div.panel-body
          h3 Transform
          img(src='/media/demos/transforms_colors.png')
    div.col-sm-4
      div.panel.panel-default
        div.panel-body
          h3 Transform Colors
          img(src='/media/demos/transforms.png')
    div.col-sm-4
      div.panel.panel-default
        div.panel-body
          h3 Mouse Rectangles
          img(src='/media/demos/mouse_rect.png')
    div.col-sm-4
